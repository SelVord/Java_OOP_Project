<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.projectoop.ExamPage">
   <BorderPane prefHeight="400.0" prefWidth="600.0">
      <top>
         <Label fx:id="examTitleLabel" contentDisplay="CENTER" prefHeight="64.0" prefWidth="382.0" text="Label" textAlignment="CENTER" BorderPane.alignment="CENTER">
            <font>
               <Font size="18.0" />
            </font>
         </Label>
      </top>
      <center>

         <ScrollPane prefHeight="200" prefWidth="600" BorderPane.alignment="CENTER">
            <VBox fx:id="questionsVBox" alignment="TOP_CENTER" layoutX="34.0" layoutY="64.0" prefHeight="300" prefWidth="598.0" spacing="10.0">
               <padding>
                  <Insets left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </ScrollPane>
      </center>
      <bottom>
         <AnchorPane prefHeight="72.0" prefWidth="600.0" BorderPane.alignment="CENTER">
            <Button layoutX="370.0" layoutY="14.0" onAction="#handleSubmit" prefHeight="44.0" prefWidth="89.0" text="Submit">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
            <Button fx:id="cancel" layoutX="134.0" layoutY="14.0" onAction="#cancel" prefHeight="44.0" prefWidth="89.0" text="Cancel">
               <font>
                  <Font size="18.0" />
               </font>
            </Button>
         </AnchorPane>
      </bottom>
   </BorderPane>
</AnchorPane>
